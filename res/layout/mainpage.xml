<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_weight="0.34"    android:background="@drawable/yodawg800x480" >    <TextView        android:id="@+id/textview1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Get down with:"        android:textAppearance="?android:attr/textAppearanceMedium" />    <EditText        android:id="@+id/input"        android:hint="Leave blank for random"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@+id/textview1"        android:layout_marginTop="15dp" />    <Button        android:id="@+id/logoff"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="160dp"        android:text="Log Off" />    <CheckBox        android:id="@+id/clean"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/input"        android:text="No Profanity?" />    <CheckBox        android:id="@+id/rap"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_below="@+id/input"        android:text="Rap" />    <Button        android:id="@+id/Friends"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/rap"        android:layout_marginTop="36dp"        android:layout_marginLeft="80px"        android:layout_toRightOf="@+id/textview1"        android:text="My Friends" />
    <Button        android:id="@+id/Self"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignBaseline="@+id/Friends"        android:layout_alignBottom="@+id/Friends"        android:layout_toLeftOf="@+id/logoff"        android:text="My Status" /></RelativeLayout>